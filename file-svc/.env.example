# -- file server configuration
FILE_BASE_URL=https://files-demo.regionayacucho.gob.pe
FILE_PUBLIC_URL=https://files-demo.regionayacucho.gob.pe/public
FILE_API_URL=https://files-demo.regionayacucho.gob.pe/api/v1
FILE_ACCESS_KEY=your_access_key
FILE_SECRET_KEY=your_secret_key
FILE_PROJECT_ID=your_project_id

# -- redis configuration
# docker run -d --name filesvc_redis -p 6379:6379 --restart unless-stopped redis:7-alpine redis-server --requirepass "supersecret"
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=supersecret

REDIS_QUEUE_FILE_JOBS=queue:file:jobs
REDIS_JOB_TTL_SECONDS=3600
REDIS_KEY_PREFIX=filesvc

# -- nats configuration
# docker run -d --name filesvc_nats -p 4222:4222 --restart unless-stopped nats:2.10-alpine
NATS_URL=nats://127.0.0.1:4222

# -- http server configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# -- logging configuration
RUST_LOG=info,file_svc=debug
LOG_DIR=./logs
LOG_FILE=file-svc.log
LOG_MAX_FILES=7
