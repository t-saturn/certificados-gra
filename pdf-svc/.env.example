# pdf-svc Environment Variables

# -- redis configuration (same as file-svc)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=supersecret

REDIS_QUEUE_PDF_JOBS=queue:pdf:jobs
REDIS_JOB_TTL_SECONDS=3600
REDIS_KEY_PREFIX=pdfsvc

# -- nats configuration (same as file-svc)
NATS_URL=nats://127.0.0.1:4222

# -- nats subjects (file-svc communication)
FILE_SVC_DOWNLOAD_SUBJECT=files.download.requested
FILE_SVC_UPLOAD_SUBJECT=files.upload.requested
FILE_SVC_DOWNLOAD_COMPLETED_SUBJECT=files.download.completed
FILE_SVC_DOWNLOAD_FAILED_SUBJECT=files.download.failed
FILE_SVC_UPLOAD_COMPLETED_SUBJECT=files.upload.completed
FILE_SVC_UPLOAD_FAILED_SUBJECT=files.upload.failed

# -- nats subjects (pdf-svc events)
PDF_SVC_PROCESS_SUBJECT=pdf.batch.requested
PDF_SVC_COMPLETED_SUBJECT=pdf.batch.completed
PDF_SVC_FAILED_SUBJECT=pdf.batch.failed
PDF_SVC_ITEM_COMPLETED_SUBJECT=pdf.item.completed
PDF_SVC_ITEM_FAILED_SUBJECT=pdf.item.failed

# -- logging configuration
LOG_DIR=./logs
LOG_FILE=pdf-svc.log
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# -- qr configuration
QR_LOGO_URL=
QR_LOGO_PATH=./assets/logo.png
QR_LOGO_CACHE_PATH=./assets/cached_logo.png

# -- general
ENVIRONMENT=development
TEMP_DIR=./tmp
