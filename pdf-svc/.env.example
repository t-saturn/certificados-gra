# PDF-SVC Environment Configuration

# Redis (misma instancia que file-gateway)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=supersecret
REDIS_JOB_TTL_SECONDS=3600
REDIS_KEY_PREFIX=pdfsvc

# Redis queues por etapa
REDIS_QUEUE_PDF_DOWNLOAD=queue:pdf:download
REDIS_QUEUE_PDF_RENDER=queue:pdf:render
REDIS_QUEUE_PDF_QR=queue:pdf:qr
REDIS_QUEUE_PDF_INSERT=queue:pdf:insert
REDIS_QUEUE_PDF_UPLOAD=queue:pdf:upload

# NATS
NATS_URL=nats://127.0.0.1:4222

# File Service (eventos)
FILE_SVC_DOWNLOAD_SUBJECT=files.download.requested
FILE_SVC_UPLOAD_SUBJECT=files.upload.requested
FILE_SVC_DOWNLOAD_COMPLETED=files.download.completed
FILE_SVC_UPLOAD_COMPLETED=files.upload.completed

# PDF Service events
PDF_SVC_PROCESS_SUBJECT=pdf.process.requested
PDF_SVC_COMPLETED_SUBJECT=pdf.process.completed
PDF_SVC_FAILED_SUBJECT=pdf.process.failed

# Logging
LOG_DIR=./logs
LOG_FILE=pdf-service.log
LOG_LEVEL=debug
LOG_FORMAT=console

# Environment
ENVIRONMENT=development

# Temp directory for PDF processing
TEMP_DIR=/tmp/pdf-svc

# Optional QR logo (CDN or local)
QR_LOGO_URL=https://res.cloudinary.com/dmr9ef5cl/image/upload/v1761328901/ar7rsbcqb9xqogx8tftq_2_z4n2ke.png
# QR_LOGO_PATH=./assets/logo.png
QR_LOGO_CACHE_PATH=./assets/cached_logo.png
