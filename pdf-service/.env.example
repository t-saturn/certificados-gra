# Redis (misma instancia que file-gateway)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=supersecret
REDIS_JOB_TTL_SECONDS=3600
REDIS_KEY_PREFIX=pdfsvc

# Redis queues por etapa
REDIS_QUEUE_PDF_DOWNLOAD=queue:pdf:download
REDIS_QUEUE_PDF_RENDER=queue:pdf:render
REDIS_QUEUE_PDF_QR=queue:pdf:qr
REDIS_QUEUE_PDF_INSERT=queue:pdf:insert
REDIS_QUEUE_PDF_UPLOAD=queue:pdf:upload

# NATS
NATS_URL=nats://127.0.0.1:4222

# Logging
LOG_DIR=./logs
LOG_FILE=pdf-service.log
LOG_LEVEL=info
