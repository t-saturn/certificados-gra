# API URLs
APP_API_BASE_URL=http://localhost:8002
APP_API_SGD_BASE_URL=http://localhost:8080
APP_API_CUM_URL=http://localhost:9191

# Keycloak
APP_KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here
