# DATABASE (PostgreSQL 17)
DB_POSTGRES_DB=cert_gra
DB_POSTGRES_USER=postgres
DB_POSTGRES_PASSWORD=your_postgres_password_here

# BACKEND (server)
SERVER_PORT=8002

# Variables del backend para conectar con Postgres
SERVER_DB_HOST=db
SERVER_DB_PORT=5432
SERVER_DB_USER=postgres
SERVER_DB_PASSWORD=your_postgres_password_here
SERVER_DB_NAME=cert_gra
SERVER_DB_SSLMODE=disable

# FRONTEND (app / Next+Bun)

